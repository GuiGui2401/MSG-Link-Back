# ============================================
# APPLICATION
# ============================================
APP_NAME="Weylo"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Africa/Douala
APP_URL=http://localhost:8000
APP_FRONTEND_URL=http://localhost:3000

APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# ============================================
# LOGGING
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# DATABASE
# ============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=msg_link
DB_USERNAME=root
DB_PASSWORD=

# ============================================
# SESSION & CACHE
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

# ============================================
# REDIS (Optionnel)
# ============================================
MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# MAIL
# ============================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@msglink.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# AWS (Optionnel)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# VITE
# ============================================
VITE_APP_NAME="${APP_NAME}"

# ============================================
# REVERB (WebSocket - Chat temps réel)
# ============================================
# Générer avec: openssl rand -hex 16 (pour KEY)
# Générer avec: openssl rand -hex 32 (pour SECRET)
REVERB_APP_ID=Weylo-app
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Variables pour le frontend (Vite)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# ============================================
# CINETPAY (Paiements - Principal)
# ============================================
# Documentation: https://cinetpay.com/documentation
CINETPAY_API_KEY=
CINETPAY_SITE_ID=
CINETPAY_SECRET_KEY=
CINETPAY_BASE_URL=https://api-checkout.cinetpay.com/v2
CINETPAY_NOTIFY_URL=https://votre-domaine.com/api/v1/payments/webhook/cinetpay
CINETPAY_TRANSFER_PASSWORD=

# ============================================
# LIGOSAPP (Paiements - Alternatif)
# ============================================
# Documentation: https://docs.lygosapp.com
# Dashboard: https://pay.lygosapp.com/dashboard/api-keys
LIGOSAPP_API_KEY=
LIGOSAPP_API_SECRET=
LIGOSAPP_WEBHOOK_SECRET=
LIGOSAPP_BASE_URL=https://api.lygosapp.com/v1

# ============================================
# INTOUCH (Paiements - Optionnel)
# ============================================
INTOUCH_API_KEY=
INTOUCH_SECRET=
INTOUCH_BASE_URL=https://api.intouch.com

# ============================================
# FIREBASE (Notifications Push)
# ============================================
# 1. Créer un projet sur https://console.firebase.google.com
# 2. Paramètres > Comptes de service > Générer une nouvelle clé privée
# 3. Placer le fichier JSON dans storage/app/firebase/
FIREBASE_CREDENTIALS=storage/app/firebase/votre-fichier-firebase.json
FIREBASE_PROJECT_ID=

# ============================================
# Weylo - PARAMÈTRES MÉTIER
# ============================================
# Prix de l'abonnement premium mensuel (en FCFA)
PREMIUM_PRICE=450

# Commission plateforme sur les cadeaux (en %)
PLATFORM_FEE_PERCENT=5

# Montant minimum de retrait (en FCFA)
MIN_WITHDRAWAL_AMOUNT=1000

# Frais de retrait (en FCFA)
WITHDRAWAL_FEE=0

# Provider de paiement par défaut (cinetpay, ligosapp)
DEFAULT_PAYMENT_PROVIDER=cinetpay

# ============================================
# RATE LIMITING (Optionnel)
# ============================================
MESSAGES_RATE_LIMIT=10
CONFESSIONS_RATE_LIMIT=5

# ============================================
# MODÉRATION (Optionnel)
# ============================================
MODERATION_AI_ENABLED=false
MODERATION_BANNED_WORDS=

# ============================================
# WHATSAPP BUSINESS API (Notifications)
# ============================================
# Documentation: https://developers.facebook.com/docs/whatsapp/cloud-api
# Dashboard: https://developers.facebook.com/apps
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_API_VERSION=v21.0
WHATSAPP_TEMPLATE_NAME=
WHATSAPP_LANGUAGE=fr

# ============================================
# NEXAH SMS API (Notifications)
# ============================================
# Contact Nexah pour obtenir vos credentials
NEXAH_BASE_URL=
NEXAH_SEND_ENDPOINT=/sms/1/text/single
NEXAH_CREDITS_ENDPOINT=/account/1/balance
NEXAH_USER=
NEXAH_PASSWORD=
NEXAH_SENDER_ID=

# ============================================
# NOTIFICATION PREFERENCES
# ============================================
# Canal de notification par défaut: whatsapp ou sms
DEFAULT_NOTIFICATION_CHANNEL=sms
